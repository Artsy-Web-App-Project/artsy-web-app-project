<h1>List of arts in our gallery</h1>

{{#each data.artsArr}}
<section class="art-summary">
    <img src="{{this.image}}"
    <h2>{{this.title}}</h2>
    <p> 
        Artist: {{this.artist.name}} <br />
        Year: {{this.year}} <br />
        <a href="/arts/{{this._id}}">More details</a>
        <a href="/arts/{{this._id}}/edit">Edit</a>
    </p>

    <form action="/arts/{{this._id}}/delete" method="POST">
        <button>Delete</button>
    </form>

</section>
{{/each}}