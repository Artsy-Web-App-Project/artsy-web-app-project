<h2>Add an art</h2>

<form action="/arts/create" method="POST">
  <label> Title:
    <input type="text" name="title" />
  </label>

  <label> Artist:
    <select name="artist">

      {{#each data.artistsArr}}
        <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>
  </label>

  <label> Year:
    <input type="number" name="year" min="1200" max="2030" value="year" />
  </label>

  <label> Address, Postal code, City, Country:
    <input type="text" name="address" />
  </label>

  <label> Description:
    <textarea name="description" cols="30" rows="4"> </textarea>
  </label>

  <button type="submit"> Create </button>
</form>