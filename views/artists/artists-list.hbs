<div class="container">
    <main>
        <section class="pt-5 text-center container">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">Artists From Our Art Gallery</h1><br>
                    <p class="lead text-muted">“The artist sees what others only catch a glimpse of.”</p>
                    <p class="lead text-muted">Leonardo da Vinci</p>
                </div>
            </div>
        </section>

        <div class="album pb-2 px-4 bg-light bg-opacity-50">
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-3 row-cols-md-4 g-4 mb-5">
                    {{#each artistsArr}}
                    <div class="col">
                        <div class="card h-100 border-0 bg-dark bg-gradient text-light shadow-lg">
                            <img class="bd-placeholder-img card-img-top img-fluid" style="object-fit: contain;" height="180px"
                                src="{{this.image}}" role="img" aria-label="Placeholder: Thumbnail"
                                spreserveAspectRatio="xMidYMid slice" 
                                focusable="false">
                            </img>

                            <div class="card-body">
                                <h6 class="card-text">{{this.name}}</h6>
                            </div>
                            <div class="text-center mb-3">
                                <a href="/artists/{{this._id}}" class="btn btn-outline-light" role="button">See More</a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </main>
</div>